<div class="container mx-auto px-4 py-16">
  <div class="bg-white shadow-xl rounded-lg p-8 max-w-2xl mx-auto">
    <h2 class="text-3xl font-display font-bold mb-6 text-coffee">Upcoming Meetup</h2>
    <div class="mb-4">
      <i class="far fa-calendar text-2xl mr-4 text-code inline-block"></i>
      <span class="text-xl"><%= event.data.meeting_date.strftime("%B %d, %Y") %></span>
    </div>
    <div class="mb-4">
      <i class="far fa-clock text-2xl mr-4 text-code inline-block"></i>
      <span class="text-xl"><%= event.data.meeting_date.strftime("%l:%M %p") %> until whenever</span>
    </div>
    <div class="mb-6">
      <i class="fas fa-map-marker-alt text-2xl mr-4 text-code inline-block"></i>
      <span class="text-xl"><%= event.data.location %></span>
    </div>
    <p class="text-gray-600 mb-6"><%= event.summary %> ...</p>

    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500">Posted on <%= event.date.strftime("%B %d, %Y") %></span>
      <a href="<%= event.relative_url %>" class="bg-code text-white font-bold py-2 px-4 rounded hover:bg-code-dark transition duration-300">
        Read More
      </a>
    </div>
  </div>
</div>